{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization, Accept"
      }
    }
  ],
  "functions": {
    "api/proxy.js": {
      "maxDuration": 30
    },
    "api/image-process.js": {
      "maxDuration": 60
    },
    "api/status.js": {
      "maxDuration": 10
    }
  }
}
